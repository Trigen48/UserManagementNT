@model UserManagementNT1.Areas.Identity.Data.AccountUser

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row border border-1">
    <h2 class="bg-dark text-light p-2">User Details</h2>
    <div class="pb-5">
   
            <div class="row">
                <div class="col pt-2 form-group">
                    <label for="FirstName" class="control-label"></label>
                    <input disabled="" name="FirstName" value="@Model.FirstName" class="form-control" />
                </div>
                <div class="col pt-2 form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input disabled="" name="Surname" value="@Model.Surname" class="form-control" />
                </div>
            </div>

            <div class="row">
                <div class="col pt-2 form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input disabled="" name="Email" value="@Model.Email" class="form-control" />
                </div>
                <div class="col pt-2 form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input  disabled="" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" /> 
                </div>

            </div>

            <div class="row">
                <div class="col pt-2 form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input  disabled="" name="Age" value="@Model.Age" class="form-control" />
                </div>
   
                <div class="col pt-2 form-group">
                    <label asp-for="Hobbies" class="control-label"></label>
                    <textarea  disabled="" name="Hobbies" value="@Model.Hobbies" class="form-control" ></textarea>
                </div>
            </div>  
    </div>
</div>

<div class="container p-1">
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

