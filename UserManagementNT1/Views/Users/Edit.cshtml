@model UserManagementNT1.Areas.Identity.Data.AccountUser

@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row border border-4">
    <h2 class="bg-dark text-light p-2">Edit User</h2>
    <div class="">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>


            <div class="row">
                <div class="col pt-2 form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col pt-2 form-group">
                    <label asp-for="Surname" class="control-label"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col pt-2 form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input disabled="" value="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="col pt-2 form-group">
                    <label asp-for="PhoneNumber" class="control-label"></label>
                    <input  asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

            </div>

            <div class="row">
                <div class="col pt-2 form-group">
                    <label asp-for="Age" class="control-label"></label>
                    <input asp-for="Age" class="form-control" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
   
                <div class="col pt-2 form-group">
                    <label asp-for="Hobbies" class="control-label"></label>
                    <textarea asp-for="Hobbies" class="form-control" ></textarea>
                    <span asp-validation-for="Hobbies" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group p-2">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="container p-1">
    <a class="btn btn-primary" asp-action="Index">Back to List</a>
</div>

